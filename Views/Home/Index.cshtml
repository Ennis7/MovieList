@model List<Movie>
@{
    ViewData["Title"] = "My Movies";
}

<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add">Add New Movie</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Years</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-contoller="Movie" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a>
                    <a asp-contoller="Movie" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>